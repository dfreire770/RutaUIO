<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/bus"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ecovia"
            android:id="@+id/nombre"
            android:layout_toRightOf="@+id/imagen"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imagen"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Inicio"
            android:id="@+id/textView3"
            android:layout_below="@+id/nombre"
            android:layout_alignStart="@+id/nombre"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/visitas"
            android:gravity="center_horizontal"
            android:paddingTop="15dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/visitas"
            android:layout_below="@+id/nombre"
            android:layout_alignStart="@+id/nombre"
            android:paddingTop="15dp"
            android:paddingRight="15dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/circuito"
            android:layout_below="@+id/visitas"
            android:layout_alignStart="@+id/visitas"
            android:paddingTop="10dp"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Final"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/circuito"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/imagen"
            android:gravity="center_horizontal"
            android:paddingTop="10dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>